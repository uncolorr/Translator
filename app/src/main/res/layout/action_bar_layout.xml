<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal"
    android:focusable="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_vertical|fill_horizontal|center_horizontal">

        <Button
            android:id="@+id/buttonLanguageFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Русский"
            android:textSize="20sp"
            android:elevation="0dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:onClick="onClickButtonLanguageFrom"
            android:background="?android:attr/selectableItemBackground"/>

        <ImageButton
            android:id="@+id/imageButtonSwap"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:tint="#ffffff"
            android:background="@color/tintColor"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/swap"/>

        <Button
            android:id="@+id/buttonLanguageTo"
            android:elevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:text="Aнглийский"
            android:onClick="onClickButtonLanguageTo"
            android:background="?android:attr/selectableItemBackground"
            android:textAllCaps="false"
            android:textColor="#ffffff" />

    </LinearLayout>

</RelativeLayout>