<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.uncolor.yandextranslator.FullScreenTranslation">

    <TextView
        android:id="@+id/textViewTextFullScreen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:paddingTop="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/imageButtonCloseFullScreen"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="41dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/imageButtonCloseFullScreen"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="fitCenter"
        android:background="?android:attr/windowBackground"
        app:srcCompat="@drawable/cross"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>
