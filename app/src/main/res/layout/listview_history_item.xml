<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewFavoriteItem"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/favorite"
        android:tint="#ff0000"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewLangItem"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="ru-en"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="12sp"
        app:layout_constraintHorizontal_weight="0"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.529" />
    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintTop_toTopOf="@+id/imageViewFavoriteItem"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFavoriteItem"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toRightOf="@+id/imageViewFavoriteItem"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/textViewLangItem"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout">
        <TextView
            android:id="@+id/textViewFromItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView TextView TextView TextViewTextView"
            android:gravity="center|left"
            android:textSize="16sp"
            android:textColor="#000000"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
             />

        <TextView
            android:id="@+id/textViewToItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:gravity="center|left"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>